<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base background color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Background color -->
        </shape>
    </item>

    <!-- Thin grid lines -->
    <item android:top="0dp" android:left="0dp" android:right="0dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#000000"/> <!-- Thin lines -->
        </shape>
    </item>

    <!-- Thicker lines for 3x3 boxes -->
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="3dp" android:color="#000000"/> <!-- Thicker lines -->
            <size android:width="0dp" android:height="0dp"/>
        </shape>
    </item>
</layer-list>
